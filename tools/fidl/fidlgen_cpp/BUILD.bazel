load("@io_bazel_rules_go//go:def.bzl", "go_binary")
load("@platforms//host:constraints.bzl", "HOST_CONSTRAINTS")
load("//build/tools/gnerator/bazel_rules:defs.bzl", "install_host_tools", "sdk_host_tool")

go_binary(
    name = "fidlgen_cpp",
    srcs = ["main.go"],
    target_compatible_with = HOST_CONSTRAINTS,
    deps = [
        "codegen",
        "//tools/fidl/lib/fidlgen_cpp",
    ],
)

sdk_host_tool(
    name = "fidlgen_cpp_sdk",
    category = "partner",
    output_name = "fidlgen_cpp",
    target_compatible_with = HOST_CONSTRAINTS,
    deps = [":fidlgen_cpp"],
)

install_host_tools(
    name = "host",
    outputs = ["fidlgen_cpp"],
    target_compatible_with = HOST_CONSTRAINTS,
    deps = [":fidlgen_cpp"],
)
