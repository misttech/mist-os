{
    include: [
        // Tests can produce trace.
        "trace/client.shard.cml",
    ],
    collections: [
        {
            name: "storage-tests",
            environment: "#test-env",
            durability: "transient",
        },
    ],
    offer: [
        {
            dictionary: "diagnostics",
            from: "parent",
            to: [ "#storage-tests" ],
        },
        {
            directory: [
                "dev-class",
                "dev-topological",
            ],
            from: "parent",
            to: [ "#storage-tests" ],
        },
        {
            protocol: [
                // Tests can write to debug logs
                "fuchsia.boot.WriteOnlyLog",
                "fuchsia.process.Launcher",

                // Tests can produce trace.
                "fuchsia.tracing.provider.Registry",
            ],
            from: "parent",
            to: [ "#storage-tests" ],
        },
        {
            event_stream: [
                "capability_requested",
                "debug_started",
                "destroyed",
                "started",
                "stopped",
            ],
            from: "parent",
            to: "#storage-tests",
            scope: "#storage-tests",
        },
        {
            service: [ "fuchsia.storage.partitions.PartitionService" ],
            from: "parent",
            to: "#storage-tests",
            availability: "optional",
        },
        {
            protocol: [ "fuchsia.storage.partitions.PartitionsManager" ],
            from: "parent",
            to: "#storage-tests",
            availability: "optional",
        },
        {
            storage: "fxfs_tests_data",
            from: "self",
            as: "data",
            to: [ "#storage-tests" ],
            rights: [ "rw*" ],
        },
        {
            storage: "cache",
            from: "self",
            to: [ "#storage-tests" ],
        },
        {
            storage: "tmp",
            from: "self",
            to: [ "#storage-tests" ],
        },
    ],
}
