{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/fshost",
        lifecycle: { stop_event: "notify" },
    },
    children: [
        {
            name: "tmpfs",
            url: "fuchsia-boot:///memfs#meta/memfs.cm",
        },
    ],
    capabilities: [
        {
            directory: "data",
            rights: [ "rw*" ],
            path: "/fs/data/root",
        },
        {
            directory: "factory",
            rights: [ "r*" ],
            path: "/fs/factory",
        },
        {
            protocol: [
                "fuchsia.fshost.Admin",
                "fuchsia.fshost.Recovery",
            ],
        },
    ],
    use: [
        {
            directory: "dev-topological",
            rights: [ "r*" ],
            path: "/dev",
        },
        {
            directory: "boot",
            rights: [ "rx*" ],
            path: "/boot",
        },
        {
            protocol: [
                "fuchsia.boot.Arguments",
                "fuchsia.boot.Items",
                "fuchsia.boot.WriteOnlyLog",
                "fuchsia.process.Launcher",
            ],
        },
        {
            protocol: "fuchsia.tracing.provider.Registry",

            // Trace manager may be excluded from builds where tracing is not
            // expected to be used for observability, such as in the bringup
            // product and non-eng builds of any product.
            availability: "optional",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.scheduler.RoleManager" ],
            from: "parent",
            to: "#tmpfs",
            availability: "optional",
        },
    ],
    expose: [
        {
            directory: [
                "data",
                "factory",
            ],
            from: "self",
        },
        {
            directory: "memfs",
            from: "#tmpfs",
            as: "tmp",
        },
        {
            protocol: [
                "fuchsia.fshost.Admin",
                "fuchsia.fshost.Recovery",
            ],
            from: "self",
        },

        // TODO(https://fxbug.dev/391474592): Remove after per-container volumes land.
        {
            protocol: "fuchsia.fxfs.CryptManagement",
            from: "void",
            availability: "optional",
        },
    ],
}
