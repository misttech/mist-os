{
    include: [
        "//src/storage/fs_test/meta/fxfs_crypt_test.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/test-fxfs",
        use_next_vdso: "true",
    },
    children: [
        {
            name: "test-fxfs",
            url: "test-fxfs#meta/test-fxfs.cm",
        },
    ],
    capabilities: [
        {
            directory: "data",
            rights: [ "rw*" ],
            path: "/data",
        },
    ],
    expose: [
        {
            directory: "data",
            from: "self",
        },
        {
            protocol: "fuchsia.fxfs.CryptManagement",
            from: "#fxfs-crypt",
        },
    ],
}
