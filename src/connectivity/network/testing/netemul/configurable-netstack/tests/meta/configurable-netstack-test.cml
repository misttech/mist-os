{
    include: [
        "//src/connectivity/network/testing/netemul/runner/default.shard.cml",
        "inspect/offer.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        networks: [
            {
                name: "net",
                endpoints: [
                    { name: "client-ep" },
                    { name: "server-ep" },
                ],
            },
            {
                name: "other",
                endpoints: [
                    {
                        name: "client-no-addrs",
                        mac: "00:00:00:00:00:01",
                    },
                    {
                        name: "client-ipv4-fwd",
                        mac: "00:00:00:00:00:02",
                    },
                    {
                        name: "client-ipv6-fwd",
                        mac: "00:00:00:00:00:03",
                    },
                    {
                        name: "client-ipv4-nud",
                        mac: "00:00:00:00:00:04",
                    },
                    {
                        name: "client-ipv6-nud",
                        mac: "00:00:00:00:00:05",
                    },
                ],
            },
        ],
        netstacks: [
            {
                name: "client",
                interfaces: [
                    {
                        name: "client-ep",
                        static_ips: [ "192.168.0.2/24" ],
                        gateway: "192.168.0.1",
                    },
                    {
                        name: "client-no-addrs",
                        static_ips: [ "2001::1/120" ],
                        without_autogenerated_addresses: "true",
                    },
                    {
                        name: "client-ipv4-fwd",
                        static_ips: [],
                        enable_ipv4_forwarding: "true",
                    },
                    {
                        name: "client-ipv6-fwd",
                        static_ips: [],
                        enable_ipv6_forwarding: "true",
                    },
                    {
                        name: "client-ipv4-nud",
                        static_ips: [],
                        ipv4_multicast_neighbor_solicitations: "100",
                    },
                    {
                        name: "client-ipv6-nud",
                        static_ips: [],
                        ipv6_multicast_neighbor_solicitations: "100",
                    },
                ],
            },
            {
                name: "server",
                interfaces: [
                    {
                        name: "server-ep",

                        // These should match `server_ips` as defined in the
                        // common test crate.
                        static_ips: [
                            "192.168.0.1/24",
                            "192.168.0.3/24",
                        ],
                    },
                ],
            },
        ],
        start: [ "server" ],
    },
    children: [
        {
            name: "client",
            url: "#meta/client.cm",
        },
        {
            name: "server",
            url: "#meta/server.cm",
        },
        {
            name: "client-netstack",
            url: "#meta/configurable-netstack-netstack2.cm",
        },
        {
            name: "server-netstack",
            url: "#meta/configurable-netstack-netstack2.cm",
        },
        {
            name: "sync-manager",
            url: "#meta/sync-manager.cm",
        },
    ],
    use: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#client",
        },
        {
            protocol: "fuchsia.netemul.ConfigurableNetstack",
            from: "#client-netstack",
            path: "/svc/client",
        },
        {
            protocol: "fuchsia.netemul.ConfigurableNetstack",
            from: "#server-netstack",
            path: "/svc/server",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.netemul.sync.SyncManager",
            from: "#sync-manager",
            to: [
                "#client",
                "#server",
            ],
        },
        {
            protocol: [
                "fuchsia.net.interfaces.State",
                "fuchsia.net.root.Interfaces",
                "fuchsia.net.routes.StateV4",
                "fuchsia.posix.socket.Provider",
            ],
            from: "#client-netstack",
            to: "#client",
        },
        {
            protocol: [ "fuchsia.posix.socket.Provider" ],
            from: "#server-netstack",
            to: "#server",
        },
    ],
}
