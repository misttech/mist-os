{
    include: [
        "//sdk/lib/sys/testing/elf_test_runner.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/binder_proxy_enumerate_tests",
    },
    children: [
        {
            name: "binder-proxy",
            url: "binder-proxy#meta/binder-proxy.cm",
            startup: "eager",
        },
    ],
    capabilities: [
        {
            config: "fuchsia.binder.BindToLoopback",
            type: "bool",
            value: true,
        },
    ],
    use: [
        {
            protocol: "fuchsia.vsock.Connector",
            from: "parent",
        },
        {
            config: "fuchsia.binder-proxy-tests.enumeration.ExpectedUuids",
            key: "expected_uuids",
            type: "vector",
            max_count: 100,
            element: {
                type: "string",
                max_size: 100,
            },
        },
    ],
    offer: [
        {
            config: "fuchsia.binder.BindToLoopback",
            from: "self",
            to: "#binder-proxy",
        },
        {
            protocol: "fuchsia.vsock.Connector",
            from: "parent",
            to: "#binder-proxy",
        },
        {
            directory: "ta",
            from: "parent",
            to: "#binder-proxy",
            rights: [ "rx*" ],
        },
    ],
}
