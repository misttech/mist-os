import("//build/bazel/export_fuchsia_package_to_bazel.gni")
import("//build/components.gni")
import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")
import("//build/go/toolchain.gni")

go_library("lib") {
  testonly = true
  deps = [
    "//src/lib/component",
    "//src/tests/fidl/compatibility/fidl:fidl_service_go($go_toolchain)",
  ]
  sources = [ "main.go" ]
}

go_binary("bin") {
  testonly = true
  library = ":lib"
  output_name = "go-impl"
  output_dir = target_out_dir
}

fuchsia_component("go-impl") {
  testonly = true
  manifest = "meta/go-impl.cml"
  deps = [ ":bin" ]
}

fuchsia_package("go") {
  testonly = true
  package_name = "fidl-compatibility-test-go"
  deps = [ ":go-impl" ]
}

export_fuchsia_package_to_bazel("go.bazel_input") {
  testonly = true
  package = ":go"
}
