import("//build/rust/rustc_library.gni")

# TODO(b/394964930): Enable host-only assert
# assert(is_host, "ffx writer is for host tools only")

rustc_library("lib") {
  name = "ffx_writer"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true
  sources = [
    "src/lib.rs",
    "src/machine_writer.rs",
    "src/simple_writer.rs",
    "src/tool_io.rs",
    "src/verified_machine_writer.rs",
  ]
  deps = [
    "//src/developer/lib/writer:lib",
    "//third_party/rust_crates:schemars",
    "//third_party/rust_crates:serde",
    "//third_party/rust_crates:serde_json",
    "//third_party/rust_crates:valico",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test($host_toolchain)" ]
}

group("writer") {
  testonly = true

  deps = [
    ":lib",
    ":tests",
  ]
}
