    name = "cc_lib_src",
    content = "int what() { return 42; } \n",
    filename = "lib.cc",
)

cc_library(
    name = "cc_lib",
    srcs = [":cc_lib_src"],
)

fuchsia_cc_test(
    name = "cc_test",
    srcs = [":cc_main"],
    deps = [":cc_lib"],
)

fuchsia_cc_test(
    name = "cc_unit_test",
    srcs = [":cc_main"],
    deps = [":cc_lib"],
)

fuchsia_test_component(
    name = "cc_test_component",
    manifest = ":test_component_manifest",
    deps = [
        ":cc_test",
    ],
)

