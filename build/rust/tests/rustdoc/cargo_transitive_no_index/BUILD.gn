# Generated by //build/rust/tests/create_rustdoc_tests.py
# Test explanation: We use the regular and transitive dependencies.Both should appear in the item docs for the final crate. The index page is not generated, however.

group("cargo_transitive_no_index") {
  testonly = true
  deps = [ ":host-test($host_toolchain)" ]
}

if (is_host) {
  python_host_test("host-test") {
    main_source = "test.py"
    deps = [ ":host-test-data" ]
    extra_args =
        [ rebase_path("$target_gen_dir/sierra.doc.zip.copy", root_build_dir) ]
  }
  host_test_data("host-test-data") {
    sources = [ "$target_gen_dir/sierra.doc.zip" ]
    public_deps = [
      ":quebec.actual.rustdoc",
      ":sierra.actual.rustdoc",
      ":tango.actual.rustdoc",
    ]
    outputs = [ "$target_gen_dir/sierra.doc.zip.copy" ]
  }
}

rustc_library("quebec") {
  edition = 2021
  define_rustdoc_test_override = true
  name = "quebec"
  deps = []
  public_deps = []
  testonly = true
  source_root = "../src/quebec.rs"
  sources = [ "../src/quebec.rs" ]
  quiet_clippy = true
  rustdoc_out_dir = "$target_gen_dir/quebec.doc"
  rustdoc_args = []
  zip_rustdoc_to = "$target_gen_dir/quebec.doc.zip"
}
rustc_library("tango") {
  edition = 2021
  define_rustdoc_test_override = true
  name = "tango"
  deps = [ ":quebec" ]
  public_deps = [ ":quebec.actual.rustdoc" ]
  testonly = true
  source_root = "../src/tango.rs"
  sources = [ "../src/tango.rs" ]
  quiet_clippy = true
  rustdoc_out_dir = "$target_gen_dir/tango.doc"
  rustdoc_args = []
  zip_rustdoc_to = "$target_gen_dir/tango.doc.zip"
}
rustc_library("sierra") {
  edition = 2021
  define_rustdoc_test_override = true
  name = "sierra"
  deps = [ ":tango" ]
  public_deps = [ ":tango.actual.rustdoc" ]
  testonly = true
  source_root = "../src/sierra.rs"
  sources = [ "../src/sierra.rs" ]
  quiet_clippy = true
  rustdoc_out_dir = "$target_gen_dir/doc"
