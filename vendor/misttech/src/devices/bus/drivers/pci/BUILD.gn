import("//build/bind/bind.gni")
import("//build/zircon/zx_library.gni")

group("pci") {
  deps = [ ":bus-pci" ]
}

# The PCI bus driver uses this set, as well as the
# automated tests.
source_set("bus-pci") {
  visibility = [
    ":*",
    "test/:*",
  ]

  sources = [
    "allocation.cc",
    "bridge.cc",
    "bus.cc",
    "bus_device_interface.cc",

    #"bus_inspect.cc",
    "capabilities/msix.cc",
    "capabilities/power_management.cc",

    #"composite.cc",
    "config.cc",
    "device.cc",
    "device_caps.cc",

    #"device_inspect.cc",
    "device_irqs.cc",

    #"device_service.cc",
    #"fidl.cc",
    "upstream_node.cc",
  ]

  deps = [
    #"//sdk/lib/driver/metadata/cpp",
    "//src/devices/bind/fuchsia.acpi:fuchsia.acpi_cpp",
  ]

  public_deps = [
    "//sdk/banjo/mistos.hardware.pciroot:mistos.hardware.pciroot_banjo_cpp",
    "//sdk/fidl/mistos.hardware.pci:mistos.hardware.pci_banjo_cpp",
    "//sdk/fidl/mistos.hardware.pci:mistos.hardware.pci_bindlib_cpp",
    "//vendor/misttech/zircon/kernel/lib/mistos/util:headers",
    "//zircon/kernel/object:headers",

    #"//sdk/fidl/fuchsia.io:fuchsia.io_cpp",
    #"//sdk/lib/component/outgoing/cpp",
    "//src/devices/bind/fuchsia:fuchsia_cpp",
    "//src/devices/bind/fuchsia.acpi:fuchsia.acpi_cpp",

    #"//src/devices/lib/driver",
    #"//src/devices/lib/driver:driver_runtime",
    #"//src/devices/pci/lib/device-protocol-pci",
    "//src/devices/pci/lib/pci",
    "//vendor/misttech/src/lib/ddk",
    "//vendor/misttech/src/lib/ddktl",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/hwreg",

    #"//zircon/system/ulib/inspect",
    "//zircon/system/ulib/pretty",

    #"//zircon/system/ulib/region-alloc",
    #"//zircon/system/ulib/zircon-internal",
    "//zircon/system/ulib/zx",

    # TODO(https://fxbug.dev/42109087): This shouldn't be here if the mmio code is actually
    # used in the test too.  Anything using that needs to be separately
    # compiled for the test using the mock version.
    "//src/devices/lib/mmio",
  ]

  # TODO(https://fxbug.dev/42136089): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]

  configs += [ "//build/config:default_include_dirs" ]
}

driver_bind_rules("pci_bind") {
  rules = "meta/pci.bind"
  tests = "meta/pci_bind_tests.json"
  deps = [
    "//src/devices/bind/fuchsia.pci",
    "//src/devices/bind/fuchsia.platform",
  ]
}

# bus-pci is used on boards that enable user space PCI support.
zx_library("bus-pci-driver") {
  configs += [
    "//build/config:all_source",
    "//build/config/fuchsia:enable_zircon_asserts",
  ]

  sources = [
    # The driver needs bind glue, unlike tests.
    "bind.cc",
  ]
  deps = [
    ":bus-pci",
    ":pci_bind",

    #"//src/devices/lib/driver",
  ]

  configs += [ "//build/config:default_include_dirs" ]
}

group("tests") {
  testonly = true
  deps = [
    #":pci_bind_test",
    #"test:pci-driver-test",
    #"test:pci-unit-test",
  ]
}
