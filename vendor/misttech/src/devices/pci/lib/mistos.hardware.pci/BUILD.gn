config("include") {
  include_dirs = [ "include" ]
}

source_set("mistos.hardware.pci_banjo_c") {
  sources = [ "include/mistos/hardware/pci/c/banjo.h" ]
  public_configs = [ ":include" ]
  public_deps = [ "//vendor/misttech/src/lib/ddk" ]
}

source_set("mistos.hardware.pci_banjo_cpp") {
  sources = [
    "include/mistos/hardware/pci/cpp/banjo-internal.h",
