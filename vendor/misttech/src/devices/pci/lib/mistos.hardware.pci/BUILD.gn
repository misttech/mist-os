  public_deps = [
    ":mistos.hardware.pci_banjo_c",
    "//vendor/misttech/src/lib/ddktl",
  ]
}

source_set("mistos.hardware.pci_banjo_cpp_mock") {
  sources = [ "include/mistos/hardware/pci/cpp/banjo-mock.h" ]
  public_configs = [ ":include" ]
  public_deps = [ ":mistos.hardware.pci_banjo_cpp" ]
}
